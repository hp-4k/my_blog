<div class="comment">
<p><strong><%= comment.commenter%></strong> <small><%= time_ago_in_words(comment.created_at) %> ago</small>
  <% if current_user?(@user) %>
  <small>| <%= link_to 'Delete this comment', comment, method: :delete, data: { confirm: 'Are you sure you want to delete this comment permanently?' } %></small>
  <% end %>
</p>
<p><%= comment.body %></p>
</div>